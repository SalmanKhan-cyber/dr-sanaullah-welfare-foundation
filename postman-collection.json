  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Sign Up with Email",
          "request": {
            "method": "POST",
            "header": [{"key": "Content-Type", "value": "application/json"}],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"patient@test.com\",\n  \"password\": \"Patient123!\",\n  \"role\": \"patient\"\n}"
            },
            "url": {
              "raw": "http://localhost:4000/api/auth/signup-email",
              "host": ["http://localhost:4000"],
              "path": ["api", "auth", "signup-email"]
            }
          }
        },
        {
          "name": "Send Phone OTP",
          "request": {
            "method": "POST",
            "header": [{"key": "Content-Type", "value": "application/json"}],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"phone\": \"+923001234567\"\n}"
            },
            "url": {
              "raw": "http://localhost:4000/api/auth/otp",
              "host": ["http://localhost:4000"],
              "path": ["api", "auth", "otp"]
            }
          }
        },
        {
          "name": "Set User Role (Admin)",
          "request": {
            "method": "POST",
            "header": [{"key": "Content-Type", "value": "application/json"}],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"userId\": \"USER_ID_HERE\",\n  \"role\": \"admin\"\n}"
            },
            "url": {
              "raw": "http://localhost:4000/api/auth/set-role",
              "host": ["http://localhost:4000"],
              "path": ["api", "auth", "set-role"]
            }
          }
        }
      ]
    },
